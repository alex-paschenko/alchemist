{
  "name": "@elenka/alchemist",
  "version": "0.6.3",
  "description": "Microlibrary for multiple inheritance",
  "main": "dist/cjs/alchemize.js",
  "module": "dist/esm/alchemize.js",
  "types": "dist/alchemize.d.ts",
  "type":"module",
  "exports": {
    ".": {
      "import": "./dist/esm/alchemize.js",
      "require": "./dist/cjs/alchemize.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm test && npm run update-badges && tsc && tsc --project tsconfig.cjs.json",
    "update-badges": "NODE_OPTIONS=\"--loader ts-node/esm\" npx ts-node --project ./tsconfig.cjs.json ./build/updateBadges.cts",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alex-paschenko/alchemist.git"
  },
  "keywords": [
    "mixin",
    "multiple inheritance",
    "inheritance",
    "merge classes"
  ],
  "author": "Alexander Paschenko",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}

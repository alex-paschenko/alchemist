{
  "name": "@lenka/alchemist",
  "version": "0.9.0",
  "description": "Microlibrary for multiple inheritance",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm test && tsc && tsc --project tsconfig.cjs.json",
    "update-badges": "NODE_OPTIONS=\"--loader ts-node/esm\" npx ts-node --project ./tsconfig.cjs.json ./build/updateBadges.cts",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alex-paschenko/alchemist.git"
  },
  "keywords": [
    "multiple inheritance",
    "multiple-inheritance",
    "inheritance",
    "class",
    "classes",
    "merge classes",
    "merge-classes",
    "merge",
    "klass",
    "klasses",
    "alchemist"
  ],
  "author": "Alexander Paschenko",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@lenka/alchemist": "^0.8.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
